''
  * {
    border: none;
    border-radius: 0px;
    /* `otf-font-awesome` is required to be installed for icons */
    font-family: "Iosevka Nerd Font";
    font-weight: 600;
    font-size: 14px;
    min-height: 20px;
    opacity: 1.0;
  }

  window#waybar {
    background: none;
  }

  tooltip {
    /*background: #12121e;*/
    background: #1e1e2e;
    border-radius: 7px;
    border-width: 2px;
    border-style: solid;
    border-color: #89cdeb;
    color: #9aa5ce;
    margin-top: 10px;
    opacity: 0.75;
  }

  #battery {
    color: #a6e3a1;
    border-radius: 7px;
    margin-right: 5px;
    border-left: 0px;
  }

  .module {
    padding: 0px 5px;
    margin: 0px 5px;
    border-radius: 7px;
  }

  .modules-left {
    border-radius: 7px;
    background: #1e1e2e;
    padding: 3px 5px;
    border: 1px solid #414559;
    margin: 5px 11px 0px;
  }

  #custom-shutdown {
    color: #f7768e;
  }

  #custom-reboot {
    color: #ff9e64;
    font-size: 20px;
    padding-bottom: 2px;
  }

  #custom-logout {
    color: #9ece6a;
    font-size: 18px;
  }

  #network {
    color: #f9e2af;
  }

  #workspaces {
    background: #1e1e2e;
  }

  #cpu {
    color: #89cdeb;
  }

  #memory {
    color: #94e2d5;
  }

  #workspaces button {
    color: #313244;
  }

  #workspaces button.active {
    color: #89b4fa;
  }

  #workspaces button.focused {
    color: #707880;
  }

  #workspaces button.urgent {
    color: #11111b;
    background: #f28fad;
    opacity: 0.5;
  }

  #workspaces button:hover {
    color: #cdd6f4;
  }
  
  .modules-center {
    border-radius: 7px;
    border: 1px solid #414559;
    background: #1e1e2e;
    padding: 5px 10px;
    margin: 5px 5px 0px;
  }

  #mpris {
    color: #bb9af7;
  }

  #mpris.paused {
    color: #fab387;
  }

  #pulseaudio {
    color: #89b4fa;
  }

  .modules-right {
    border-radius: 7px;
    background: #1e1e2e;
    padding: 3px 5px;
    border: 1px solid #414559;
    margin: 5px 11px 0px;
  }

  #clock {
    color: #fab387;
  }

  #bluetooth {
    color: #89b4fa;
  }
''