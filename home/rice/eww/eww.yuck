(defwidget widgets []
  (box :orientation "v" :space-evenly false
    (clock-widget)
    (control-buttons)
    (box :orientation "h"
      (calendar-widget)
      (music-widget)
    )
    (box :orientation "h"
      (timer-widget)
      (rando-widget)
      (calculator-widget)
    )
    (monitors)
  )
)

(defwindow widgets
  :geometry (geometry :anchor "center center")
  :stacking "overlay"
  :namespace "ewwidgets"
  :focusable true
  (widgets)
)
